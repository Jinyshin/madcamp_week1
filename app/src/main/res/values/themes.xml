<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorOnPrimary">@color/ivory_100</item>
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/ivory_100</item>
        <item name="android:windowBackground">@color/ivory_100</item>
        <item name="android:statusBarColor">@color/ivory_100</item>
        <item name="android:toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/ivory_100</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Theme.TabApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TabApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>