<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/photos_padding"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:contentPadding="@dimen/photos_padding">

    <RelativeLayout
        android:id="@+id/rvPhotoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/rvPhotoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            app:cardCornerRadius="12dp" >
            <ImageView
                android:id="@+id/rvPhotoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="sungsimdang"
                tools:src="@drawable/sungsimdang" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rvPhotoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvPhotoCard"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="성심당" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>